@model Fall2024_Assignment3_separal.Models.Movies.MovieDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.ImdbLink)
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.Movie.ImdbLink">@Model.Movie.ImdbLink</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.PosterUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Movie.PosterUrl" alt="Movie Poster" />
        </dd>
    </dl>
</div>

<div>
    <h4>Actors</h4>
    <div>
        @foreach (var actor in Model.Actors)
        {
            <div>@actor</div>
        }
    </div>
</div>
<div>
    <h4>Overall Sentiment</h4>
    <p>@Model.OverallSentiment</p>
</div>
<div>
    <h4>Reviews and Sentiments</h4>
    <div>
        @for (int i = 0; i < Model.Reviews.Count; i++)
        {
            <div>@Model.Reviews[i]</div>
        }
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Movie.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
