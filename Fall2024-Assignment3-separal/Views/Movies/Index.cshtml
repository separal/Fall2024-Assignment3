@model IEnumerable<Fall2024_Assignment3_separal.Models.Movies.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Title)</th>
            <th>@Html.DisplayNameFor(model => model.First().ImdbLink)</th>
            <th>@Html.DisplayNameFor(model => model.First().Genre)</th>
            <th>@Html.DisplayNameFor(model => model.First().Year)</th>
            <th>Poster</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>
                    <a href="@item.ImdbLink" target="_blank">
                        @item.ImdbLink
                    </a>
                </td>
                <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                <td>@Html.DisplayFor(modelItem => item.Year)</td>
                <td>
                    <img src="@item.PosterUrl" alt="Poster for @item.Title" style="max-height: 200px; max-width: 150px;" onerror="this.onerror=null;this.src='https://example.com/fallback.jpg';" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

