@model Fall2024_Assignment3_separal.Models.Actors.Actor

@{
    ViewData["Title"] = "Create Actor";
}

<h1>Create Actor</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age" class="control-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImdbLink" class="control-label"></label>
        <input asp-for="ImdbLink" class="form-control" />
        <span asp-validation-for="ImdbLink" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhotoUrl" class="control-label"></label>
        <input asp-for="PhotoUrl" class="form-control" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
