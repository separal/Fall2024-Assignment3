@model Fall2024_Assignment3_separal.Models.Actors.ActorDetailsViewModel

@{
    ViewData["Title"] = "Actor Details";
}

<h1>@Model.Actor.Name</h1>

<div>
    <h2>Movies</h2>
    <div>
        @foreach (var movie in Model.Movies)
        {
            <div>@movie</div>
        }
    </div>
</div>
<div>
    <h2>Overall Sentiment Analysis</h2>
    <p>@Model.OverallSentiment</p>
</div>

<div>
    <h2>Tweets</h2>
    <div>
        @foreach (var tweet in Model.Tweets)
        {
            <div>@tweet</div>
        }
    </div>
</div>
